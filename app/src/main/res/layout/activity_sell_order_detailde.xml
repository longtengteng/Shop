<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@color/F7"

    >
    <include layout="@layout/title_bar"/>
    <TextView
        android:id="@+id/tv_11"
        android:layout_below="@+id/title_bar"
        style="@style/divider_line"/>

    <ScrollView
        android:layout_below="@+id/tv_11"
        android:layout_above="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="订单状态"/>
                <TextView
                    android:textColor="#49d8c5"
                    android:textSize="14sp"
                    android:id="@+id/tv_order_state"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="订单号"/>
                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_weight="1"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/tv_copy_nummber"
                    android:textColor="@color/tx33a3f9"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制单号"/>
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="下单时间"/>
                <TextView
                    android:id="@+id/tv_order_time"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_vertical"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:text="买家留言"/>
                <TextView
                    android:id="@+id/tv_order_message"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:textSize="13sp"
                android:textColor="@color/tx66"
                android:text="收货信息"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:text="收货人"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_people"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/tv_copy_address"
                    android:textColor="@color/tx33a3f9"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制地址"/>
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="66dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="收货人电话"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="66dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="收货地址"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
            </LinearLayout>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:textSize="13sp"
                android:textColor="@color/tx66"
                android:text="订单详情"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/iv_shop_head"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:src="@mipmap/de_photo"-->

                <!--/>-->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/my_icon_follow"/>
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/tx33"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                   />
                <ImageView
                    android:id="@+id/iv_speak"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/order_detail_icon_chat"/>
                <ImageView
                    android:id="@+id/iv_phone"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/order_detail_icon_tel"/>
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <com.lnkj.privateshop.view.MyListView

                android:id="@+id/mMyListView"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </com.lnkj.privateshop.view.MyListView>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx38"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共"/>
                <TextView
                    android:id="@+id/tv_goods_count_two"
                    android:textSize="12sp"
                    android:textColor="@color/btn_bj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:textColor="@color/tx38"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件"/>
                <TextView
                    android:id="@+id/tv_freight"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/tx99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_marginLeft="4dp"
                    android:textSize="16sp"
                    android:textColor="@color/btn_bj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_btn_left_one"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bj"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/tx38"
            android:textSize="12sp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/tv_btn_two"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:background="@drawable/button_bj"
            android:gravity="center"
            android:text="再次购买"
            android:textColor="@color/tx38"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/tv_btn_three"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bj"
            android:gravity="center"
            android:text="前往评价"
            android:textColor="@color/tx38"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
