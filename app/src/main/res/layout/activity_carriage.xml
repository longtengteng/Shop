<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/title_bar"/>

    <TextView
        style="@style/divider_line"/>

    <TextView
        android:background="@color/F7"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="12dp"
        android:textSize="13sp"
        android:textColor="@color/tx66"
        android:text="默认运费"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_1"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView

            android:textColor="@color/tx33"
            android:textSize="13sp"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="地区"/>
        <TextView
            android:id="@+id/tv_address"
            android:text="选择地区"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="@color/tx99"
            android:textSize="13sp"
            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/my_icon_more"
            />
    </LinearLayout>
    <TextView
        style="@style/divider_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView

            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="首重(元)"
            android:textColor="@color/tx33"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="36dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入运费"
            android:textColor="@color/tx99"
            android:textColorHint="@color/tx99"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        style="@style/divider_line"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView

            android:textColor="@color/tx33"
            android:textSize="12sp"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="续重(元)"/>
        <EditText

            android:textColorHint="@color/tx99"
            android:hint="请输入运费"
            android:background="@null"
            android:id="@+id/tv_weight_to"
            android:layout_weight="1"
            android:textColor="@color/tx99"
            android:textSize="12sp"
            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <TextView
        android:background="@color/F7"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="12dp"
        android:textSize="13sp"
        android:textColor="@color/tx66"
        />
    <LinearLayout
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_add"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:drawableLeft="@mipmap/my_icon_add"
            android:textColor="@color/blue_delault"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加特定地区运费"/>


    </LinearLayout>
<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mListView"></ListView>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>
