<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/F7"
    android:orientation="vertical"

    >

    <include layout="@layout/title_bar" />

    <TextView
        android:id="@+id/tv_11"
        style="@style/divider_line"
        android:layout_below="@+id/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/tv_11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="订单状态"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:textColor="#49d8c5"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="订单号"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_weight="1"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_copy_nummber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:text="复制单号"
                    android:textColor="@color/tx33a3f9"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="下单时间"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="买家留言"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView

                    android:id="@+id/tv_order_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="收货信息"
                android:textColor="@color/tx66"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:text="收货人"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_weight="1"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_copy_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:text="复制地址"
                    android:textColor="@color/tx33a3f9"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="收货人电话"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="收货地址"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="订单详情"
                android:textColor="@color/tx66"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/iv_shop_head"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:src="@mipmap/de_photo"-->

                <!--/>-->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/my_icon_follow" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/tx33"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_speak"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@mipmap/order_detail_icon_chat" />

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@mipmap/order_detail_icon_tel" />
            </LinearLayout>

            <TextView style="@style/divider_line" />

            <com.lnkj.privateshop.view.MyListView
                android:id="@+id/mMyListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="12dp"></com.lnkj.privateshop.view.MyListView>

            <TextView style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共"
                    android:textColor="@color/tx38"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_goods_count_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/btn_bj"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件"
                    android:textColor="@color/tx38"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/tx99"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/btn_bj"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_btn_left_one"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bj"
            android:gravity="center"
            android:text="删除订单"
            android:textColor="@color/tx38"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_btn_two"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bj"
            android:gravity="center"
            android:text="再次购买"
            android:textColor="@color/tx38"
            android:textSize="12sp" />

        <TextView

            android:id="@+id/tv_btn_three"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bj"
            android:gravity="center"
            android:text="前往评价"
            android:textColor="@color/tx38"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
