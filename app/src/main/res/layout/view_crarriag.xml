<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/F7"></LinearLayout>
<LinearLayout
    android:gravity="center_vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_reduce"
        android:padding="6dp"
        android:src="@mipmap/my_icon_reduce"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/ll_1"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:textColor="@color/tx33"
                android:textSize="13sp"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="地区"/>
            <TextView
                 android:ellipsize="end"
                android:background="@null"
                android:id="@+id/tv_weight_to"

                android:textColor="@color/tx99"
                android:textSize="13sp"
                android:layout_marginLeft="36dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/my_icon_more"
                />
        </LinearLayout>
        <TextView
            style="@style/divider_line"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:textColor="@color/tx33"
                android:textSize="13sp"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="首重(元)"/>
            <EditText
                android:id="@+id/et1"
                android:textColorHint="@color/tx99"
                android:hint="请输入运费"
                android:background="@null"
                android:layout_weight="1"
                android:textColor="@color/tx99"
                android:textSize="13sp"
                android:layout_marginLeft="36dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <TextView
            style="@style/divider_line"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:textColor="@color/tx33"
                android:textSize="13sp"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="续重(元)"/>
            <EditText
                android:id="@+id/et2"
                android:textColorHint="@color/tx99"
                android:hint="请输入运费"
                android:background="@null"
                android:layout_weight="1"
                android:textColor="@color/tx99"
                android:textSize="13sp"
                android:layout_marginLeft="36dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <TextView
            style="@style/divider_line"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>