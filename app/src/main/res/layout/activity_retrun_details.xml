<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/F7"

    >
    <include layout="@layout/title_bar"/>
    <TextView
        android:id="@+id/tv_11"
        android:layout_below="@+id/title_bar"
        style="@style/divider_line"/>

    <ScrollView
        android:layout_below="@+id/tv_11"
        android:layout_above="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="订单状态"/>
                <TextView
                    android:id="@+id/tv_order_state"
                    android:textColor="@color/btn_bj"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:textSize="13sp"
                android:textColor="@color/tx66"
                android:text="退款信息"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                <!--android:id="@+id/iv_shop_head"-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:src="@mipmap/de_photo"-->

                <!--/>-->
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/my_icon_follow"/>
                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/tx33"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                  />

                <ImageView
                    android:id="@+id/iv_speak"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/order_detail_icon_chat"/>
                <ImageView
                    android:id="@+id/iv_phone"
                    android:padding="8dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/order_detail_icon_tel"/>
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="退款单号"/>
                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_weight="1"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/tv_copy_nummber"
                    android:textColor="@color/tx33a3f9"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制退款单号"/>
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="操作时间"/>
                <TextView
                    android:id="@+id/tv_order_time"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="处理方式"/>
                <TextView
                    android:id="@+id/tv_order_mode"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:text="退款金额"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="退款原因"/>
                <TextView
                    android:id="@+id/tv_cause"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <TextView
                style="@style/divider_line"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_width="52dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="买家留言"/>
                <TextView
                    android:id="@+id/tv_message"
                    android:textColor="@color/tx99"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:textSize="13sp"
                android:textColor="@color/tx66"
                android:text="退款凭证"/>

            <com.lnkj.privateshop.view.MyGridView
                android:padding="12dp"
                android:background="@color/white"
                android:verticalSpacing="4dp"
                android:horizontalSpacing="4dp"
                android:id="@+id/mGridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4">
            </com.lnkj.privateshop.view.MyGridView>

            <TextView
                android:layout_height="6dp"
                style="@style/divider_line"/>
<TextView
    android:id="@+id/tv_btn_look"
    android:textSize="14sp"
    android:textColor="@color/blue_delault"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:text="查看完整协商记录"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_revocation"
            android:text="撤销申请"
            style="@style/Button_default"/>
        <Button
            android:id="@+id/btn_former"
            android:background="@drawable/button_bj"
            android:layout_marginTop="8dp"
            android:textColor="@color/tx33"
            android:text="原订单详情"
            style="@style/Button_default"/>
    </LinearLayout>
</RelativeLayout>
