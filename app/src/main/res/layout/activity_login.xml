<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView style="@style/divider_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tip_logo_view"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:src="@mipmap/logo" />

            <EditText
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="手机号"
                android:singleLine="true"
                android:textColorHint="@color/tx99"
                android:textSize="14sp"></EditText>

            <View
                style="@style/divider_line"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

            </View>


            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/tx99"
                android:textSize="14sp"></EditText>

            <View
                style="@style/divider_line"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp" />

            <Button
                android:id="@+id/btn_login"
                style="@style/Button_default"
                android:text="登录" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_find_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:text="忘记密码"
                    android:textColor="@color/tx33a3f9"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="立即注册"
                    android:textColor="@color/btn_bj"
                    android:textSize="13sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_weibo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:maxWidth="45dp"
                    android:src="@mipmap/weib" />

                <ImageView
                    android:id="@+id/iv_wx"
                    android:layout_width="0dp"
                    android:maxWidth="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:src="@mipmap/wx" />

                <ImageView
                    android:id="@+id/iv_zfb"
                    android:maxWidth="45dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:src="@mipmap/zfb" />

                <ImageView
                    android:id="@+id/iv_qq"
                    android:layout_width="0dp"
                    android:maxWidth="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:src="@mipmap/qq" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
