<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />
    <TextView
        style="@style/divider_line"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_validation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/F7"
        android:gravity="center_vertical"
        android:paddingLeft="35dp"
        android:text="请输入密码"
        android:textColor="@color/tx99"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/ll_chagpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="35dp">



            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="35dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="请输入登录密码"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="14sp"></EditText>
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"></View>
        <View
            style="@style/divider_line"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手机号"
                android:textColor="@color/tx66"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_Phoen"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="输入正确的手机号码"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="14sp"></EditText>
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码    "
                android:textColor="@color/tx66"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_Phone_tw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="输入验证码"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textSize="14sp"></EditText>
            <Button
                android:layout_marginRight="35dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:id="@+id/btn_number"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="获取验证码"
                android:background="@drawable/button_default"
                />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/F7"
            android:gravity="center_vertical"
            android:paddingLeft="35dp"
            android:textColor="@color/tx99"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        style="@style/Button_default"
        android:text="下一步" />
</LinearLayout>
