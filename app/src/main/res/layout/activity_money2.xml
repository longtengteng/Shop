<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    >
    <include layout="@layout/title_bar" />
    <TextView
        style="@style/divider_line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_mones"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="#ff9422"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="您的店铺还没有加入诚信保证金，点击加入"/>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/tx66"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额(元)"/>
            <TextView
                android:id="@+id/tv_balance"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                android:textSize="24sp"
                android:textColor="@color/btn_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/tx66"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待结算(元)"/>

            <TextView

                android:id="@+id/tv_clearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                android:text="0.00"
                android:textColor="@color/tx33"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>


    <TextView style="@style/divider_line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_shouru"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/tx66"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收入(元)"/>
            <TextView
                android:id="@+id/tv_income"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                android:textSize="12sp"
                android:textColor="@color/btn_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_xiaofei"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/tx66"
                android:paddingTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计消费(元)"/>

            <TextView
                android:id="@+id/tv_consum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                android:text="0.00"
                android:textColor="@color/btn_bj"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView style="@style/divider_line"/>
<TextView
    android:id="@+id/tv_btn_look"
    android:background="@color/white"
    android:textSize="14sp"
    android:textColor="@color/tx33"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:text="查看"/>

    <Button
        android:id="@+id/btn_cash"
        android:layout_marginTop="6dp"
        android:text="提现"
        style="@style/Button_default"/>

    <Button
        android:id="@+id/btn_recharge"
        android:textColor="@color/tx33"
        android:background="@drawable/button_bj_to"
        android:layout_marginTop="6dp"
        android:text="充值"
        style="@style/Button_default"/>
    <Button
        android:id="@+id/btn_bank_card"
        android:textColor="@color/tx33"
        android:background="@drawable/button_bj_to"
        android:layout_marginTop="26dp"
        android:text="银行卡管理"
        style="@style/Button_default"/>

</LinearLayout>

