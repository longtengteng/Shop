<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="122"
        android:textColor="@color/tx33"
        android:textSize="14sp" />

    <TextView style="@style/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="54dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_shop_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_count_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:textColor="#090909"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_count_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:textColor="#090909"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bj_orange"
                        android:padding="4dp"
                        android:text="拿货"
                        android:textColor="@color/btn_bj"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_price_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/btn_bj"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_bj_orange"
                        android:padding="4dp"
                        android:text="打包"
                        android:textColor="@color/btn_bj"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_price_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/btn_bj"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/F7"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="规格"
            android:textColor="@color/tx99"
            android:textSize="11sp" />

        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="库存"
            android:textColor="@color/tx99"
            android:textSize="11sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="进货数量"
            android:textColor="@color/tx99"
            android:textSize="11sp" />
    </LinearLayout>
    <ListView
        android:id="@+id/mListView"
        android:listSelector="#00000000"
        android:divider="@color/F7"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </ListView>
    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/tx66"
            android:id="@+id/tv_1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/btn_bj"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/tv_2"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/tx66"
            android:id="@+id/tv_3"
            android:layout_toRightOf="@+id/tv_2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件"/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_toRightOf="@+id/tv_3"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="¥0.00"
            android:textColor="@color/btn_bj"
            android:textSize="18sp" />

        <TextView

            android:id="@+id/tv_add_cart"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@color/btn_bj"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:drawableLeft="@mipmap/gooddetail_icon_addtocart"
            android:gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="确定"/>
    </RelativeLayout>
</LinearLayout>