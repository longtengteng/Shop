<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#a0000000"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_titel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="缴纳诚信保证金"
            android:textColor="@color/tx33"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="34dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_bj_two"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jian"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#e9e9e9"
                android:gravity="center"
                android:text="-"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/et_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="1234567890"
                android:gravity="center"
                android:maxLength="10"
                android:text="1000" />

            <TextView
                android:id="@+id/tv_jia"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#e9e9e9"
                android:gravity="center"
                android:text="+"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_zhifu"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:background="@color/btn_bj"
            android:gravity="center"
            android:text="支付"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>