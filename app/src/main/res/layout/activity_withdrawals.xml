<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f7f7"
    >
    <include layout="@layout/title_bar" />
    <TextView
        style="@style/divider_line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
<TextView
    android:textColor="@color/tx33"
    android:textSize="14sp"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:text="提现金额"/>
        <EditText
            android:id="@+id/et_price"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@color/tx33"
            android:textColorHint="@color/tx99"
            android:hint="请输入提现金额"/>

    </LinearLayout>
    <TextView
        android:textColor="@color/tx99"
        android:textSize="12sp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:text="请选择提现账户"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

    </TextView>
            <TextView
                style="@style/divider_line"/>
        <TextView
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="没有用于提现的银行卡，点击设置"/>

        <com.lnkj.privateshop.view.MyListView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mListView">

        </com.lnkj.privateshop.view.MyListView>



    <TextView style="@style/divider_line"/>
            <Button

                android:id="@+id/btn_ok"
                android:layout_marginTop="26dp"
                android:text="确认提现"
                style="@style/Button_default"/>

            <Button
                android:id="@+id/btn_crad"
                android:textColor="@color/tx33"
                android:background="@drawable/button_bj_to"
                android:layout_marginTop="6dp"
                android:text="银行卡管理"
                style="@style/Button_default"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

