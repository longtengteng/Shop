<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="39dp"
            android:layout_height="57dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tx38"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/tx99"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_price"
            android:textSize="14sp"
            android:textColor="@color/tx38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <RadioGroup
            android:id="@+id/rg_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <RadioButton
                android:checked="true"
                android:id="@+id/rb_small"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_radiobutton_three"
                android:button="@null"
                android:gravity="center"
                android:text="减"
                android:textColor="@drawable/selector_text_three" />

            <RadioButton
                android:id="@+id/rb_max"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/selector_radiobutton_three"
                android:button="@null"

                android:gravity="center"
                android:text="涨"
                android:textColor="@drawable/selector_text_three" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_count_price"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_default_gray"
            android:gravity="center"
            android:hint="输入涨跌幅度"
            android:textColor="@color/tx33"
            android:textColorHint="@color/tx99"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_e_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"

            android:textColor="@color/btn_bj"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        style="@style/divider_line"/>
</LinearLayout>