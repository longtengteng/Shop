<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_blank"
        android:background="#a0000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>


    <ScrollView
        android:background="#f0f0f0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="请选择颜色"
                android:textColor="@color/tx33"
                android:textSize="13sp" />

            <TextView style="@style/divider_line" />



            <com.lnkj.privateshop.view.MyGridView
                android:id="@+id/myGridView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:numColumns="6"
                android:paddingTop="12dp"></com.lnkj.privateshop.view.MyGridView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f0"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="12dp">

                <EditText
                    android:id="@+id/et_color"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bj_to"
                    android:gravity="center_vertical"
                    android:hint="输入新颜色"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/tx33"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_add_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加新颜色"
                    android:textColor="#33a3f9"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add"
                    style="@style/Button_default"
                    android:layout_marginBottom="12dp"
                    android:text="完成" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>




</LinearLayout>