<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_goods_img"
            android:scaleType="centerCrop"
            android:src="@mipmap/de_photo"
            android:layout_width="100dp"
            android:layout_height="114dp"
            />
        <LinearLayout
            android:layout_marginLeft="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goods_name"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/tx33"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                />
            <TextView
                android:id="@+id/tv_goods_count"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/tx99"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_goods_price"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:textColor="@color/btn_bj"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                   />
                <TextView
                    android:id="@+id/tv_btn_go"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_default"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="104dp"
                    android:layout_height="30dp"
                    android:text="立即抢批"/>

            </RelativeLayout>
            <LinearLayout
                android:paddingBottom="6dp"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_goods_aboli_price"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:textColor="@color/tx99"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                 />
                <TextView
                    android:id="@+id/tv_sell_cout"
                    android:layout_marginRight="8dp"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:textColor="@color/tx99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <ProgressBar
                    android:max="100"
                    android:progress="0"
                    android:id="@+id/progressBar"
                    style="@style/InitProgressBar"
                    android:layout_width="104dp"
                    android:layout_height="6dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

<TextView
    style="@style/divider_line"/>
</LinearLayout>