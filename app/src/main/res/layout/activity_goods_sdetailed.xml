<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    tools:context=".ui.goods.GoodsInfoActivity">

    <com.lnkj.privateshop.view.TranslucentScrollView
        android:layout_above="@+id/ll_bottom"
        android:id="@+id/mScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:focusable="true"
                android:id="@+id/mCb"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                />
            <LinearLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/tx38"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  />
                <TextView
                    android:id="@+id/tv_collect"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/text_bj"
                    android:drawableLeft="@mipmap/my_icon_collection"
                    android:textSize="12sp"
                    android:textColor="@color/tx38"
                    android:gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                  />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_count_1"
                    android:paddingLeft="12dp"
                    android:textSize="11sp"
                    android:textColor="#090909"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                   />
                <TextView
                    android:id="@+id/tv_count_2"
                    android:paddingLeft="12dp"
                    android:textSize="11sp"
                    android:textColor="#090909"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>
            <LinearLayout

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="4dp"
                        android:background="@drawable/text_bj_orange"
                        android:textSize="11sp"
                        android:textColor="@color/btn_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拿货"/>
                    <TextView
                        android:id="@+id/tv_price_1"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/btn_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      />
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="4dp"
                        android:background="@drawable/text_bj_orange"
                        android:textSize="11sp"
                        android:textColor="@color/btn_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打包"/>
                    <TextView
                        android:id="@+id/tv_price_2"
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:textColor="@color/btn_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                     />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/tv_looking"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/tv_sell"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/F7"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/tx33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺好评率"/>
                <TextView
                    android:id="@+id/tv_good"
                    android:textSize="11sp"
                    android:textColor="@color/btn_bj"
                    android:layout_marginLeft="16dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
                <TextView
                    android:id="@+id/tv_comment"
                    android:drawableRight="@mipmap/my_icon_more"
                    android:textSize="11sp"
                    android:textColor="@color/tx99"
                    android:gravity="right|center_vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_head"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/de_photo"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"

                    android:textColor="@color/tx66"
                    android:textSize="12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_context"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评"
                android:textColor="@color/tx66"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_time"
                android:gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评"
                android:textColor="@color/tx99"
                android:textSize="12sp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/F7"/>
            <LinearLayout
                android:paddingTop="12dp"
                android:paddingLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_shop_head"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@mipmap/de_photo"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/tx33"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="4dp"
                        android:drawableLeft="@mipmap/icon_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"

                        android:textColor="@color/tx66"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_open_shop_date"
                        android:textColor="@color/btn_bj"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       />
                    <TextView
                        android:layout_marginTop="6dp"
                        android:textColor="@color/tx66"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开店时间"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shop_sales"
                        android:textColor="@color/btn_bj"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                     />
                    <TextView
                        android:layout_marginTop="6dp"
                        android:textColor="@color/tx66"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="销量"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shop_update"
                        android:textColor="@color/btn_bj"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      />
                    <TextView
                        android:layout_marginTop="6dp"
                        android:textColor="@color/tx66"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本月更新"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_shop_supplement"
                        android:textColor="@color/btn_bj"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       />
                    <TextView
                        android:layout_marginTop="6dp"
                        android:textColor="@color/tx66"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="补货率"/>
                </LinearLayout>
            </LinearLayout>
            <com.lnkj.privateshop.view.MyListView
               android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginTop="6dp"
                android:id="@+id/mListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="2dp">
            </com.lnkj.privateshop.view.MyListView>
        </LinearLayout>
    </com.lnkj.privateshop.view.TranslucentScrollView>
    <RelativeLayout
        android:id="@+id/rl_bar_to"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/gooddetail_icon_back"
            android:id="@+id/img_beak_to" />

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_bar"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="商品管理"
            android:textSize="16sp"
            android:textColor="@color/tx33"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/gooddetail_icon_back_b"
            android:id="@+id/img_beak" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_down"
                android:drawableLeft="@mipmap/my_good_icon_edit"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/tx33"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_down"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:drawableLeft="@mipmap/good_icon_down"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="上架"
                android:textColor="@color/tx33"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
