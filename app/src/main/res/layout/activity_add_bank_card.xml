<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView style="@style/divider_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#f1f1f1"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="填写银行卡信息"
            android:textColor="@color/tx99"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="持卡人    "
                android:textColor="@color/tx33"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入持卡人姓名"
                android:textColor="@color/tx33"
                android:textColorHint="@color/tx99"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView style="@style/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="银行卡号"
                android:textColor="@color/tx33"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入银行卡号"
                android:numeric="integer"
                android:textColor="@color/tx33"
                android:textColorHint="@color/tx99"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView style="@style/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="所属银行"
                android:textColor="@color/tx33"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_bank_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入所属银行如(工商银行)"
                android:textColor="@color/tx33"
                android:textColorHint="@color/tx99"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView style="@style/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="开户行     "
                android:textColor="@color/tx33"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_kaihuh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入开户行"
                android:textColor="@color/tx33"
                android:textColorHint="@color/tx99"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView style="@style/divider_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/group_checkbox_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="添加成功" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        style="@style/Button_default"
        android:layout_marginTop="30dp"
        android:text="确定" />

</LinearLayout>

