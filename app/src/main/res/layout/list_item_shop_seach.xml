<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_shop_head"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@mipmap/de_photo"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tx33"
                android:textSize="14sp" />
            <TextView
                android:drawablePadding="4dp"
                android:layout_marginTop="4dp"
                android:drawableLeft="@mipmap/icon_location"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:id="@+id/tv_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tx66"
                android:textSize="11sp" />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_icon_more"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_open_shop_date"
                android:textColor="@color/btn_bj"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              />
            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/tx66"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开店时间"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shop_sales"
                android:textColor="@color/btn_bj"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/tx66"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shop_update"
                android:textColor="@color/btn_bj"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             />
            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/tx66"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月更新"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/tv_shop_supplement"
                android:textColor="@color/btn_bj"
                android:textSize="12sp"
                android:layout_width="wrap_content"
           />
            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/tx66"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补货率"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        style="@style/divider_line"/>
</LinearLayout>