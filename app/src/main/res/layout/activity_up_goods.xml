<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/F7"

    >
    <include layout="@layout/title_bar"/>
    <TextView
        style="@style/divider_line"/>
    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/pullLoadMoreRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <include layout="@layout/layout_no_datas"/>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <CheckBox

        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:textColor="@color/tx33"
        android:layout_marginRight="6dp"
        android:id="@+id/cb_check"
        android:layout_width="80dp"
        android:gravity="center"
        android:layout_height="match_parent"
         android:text="全选"
        android:button="@drawable/checkbox_goods_selector_two"
        android:focusable="false" />
    <TextView
        android:drawablePadding="6dp"
        android:id="@+id/tv_delete"
        android:layout_toLeftOf="@+id/tv_down"
        android:gravity="center"
        android:drawableLeft="@mipmap/good_icon_delete"
        android:textSize="14sp"
        android:textColor="@color/tx33"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="删除"/>
    <TextView
        android:drawablePadding="6dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/tv_down"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:drawableLeft="@mipmap/good_icon_down"
        android:textSize="14sp"
        android:textColor="@color/tx33"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="下架"/>
</RelativeLayout>
</LinearLayout>
